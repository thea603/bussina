/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 引入 iconfont 样式 */
@font-face {
  font-family: 'iconfont';
  src: url('//at.alicdn.com/t/font_xxxx.eot');
  src: url('//at.alicdn.com/t/font_xxxx.eot?#iefix') format('embedded-opentype'),
       url('//at.alicdn.com/t/font_xxxx.woff2') format('woff2'),
       url('//at.alicdn.com/t/font_xxxx.woff') format('woff'),
       url('//at.alicdn.com/t/font_xxxx.ttf') format('truetype'),
       url('//at.alicdn.com/t/font_xxxx.svg#iconfont') format('svg');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 定义图标代码 */
.icon-user:before {
  content: "\e7ae"; /* 这是用户图标的 Unicode 编码，需要根据您选择的图标进行替换 */
}

.icon-phone:before {
  content: "\e7e3"; /* 这是电话图标的 Unicode 编码，需要根据您选择的图标进行替换 */
} 
