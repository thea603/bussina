/* pages/me/index.wxss */

/* 页面容器 */
.profile-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 40rpx;
}

/* 店铺名称信息 */
.shop-info {
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx;
  background: linear-gradient(to bottom, #FF6600 0%, #FF8533 30%, #FFFFFF 100%);
  position: relative;
  height: 200rpx;
  box-sizing: border-box;
  margin-top: -1px; /* 确保与导航栏无缝衔接 */
}

.shop-avatar {
  width: 80rpx;  /* 或者你期望的尺寸 */
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;  /* 当没有图片时显示的背景色 */
}

.shop-name-container {
  flex: 1;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.shop-name {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 500;
  margin-bottom: 10rpx;
  line-height: 1.3;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.shop-status {
  display: flex;
}

.status-tag {
  font-size: 24rpx;
  color: #FF6600;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 6rpx 14rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #4CD964; /* 绿色圆点 */
  border-radius: 50%;
  margin-right: 8rpx;
  display: inline-block;
}

.qrcode-icon {
  padding: 15rpx;
}

.qrcode-placeholder {
  width: 50rpx;
  height: 50rpx;
  background-color: #EEEEEE;
  border-radius: 8rpx;
}

/* 顶部用户信息区域 */
.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx;
  background-color: #3E2723;
  color: #FFFFFF;
  border-radius: 20rpx 20rpx 0 0; /* 只保留上边的圆角 */
  margin: 30rpx 20rpx 0 20rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  flex-direction: column;
}

.balance-label {
  font-size: 28rpx;
  opacity: 0.8;
  margin-bottom: 10rpx;
}

.balance-value {
  font-size: 40rpx;
  font-weight: 500;
}

.setting-icon {
  background-color: #E6C9A1;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.setting-text {
  color: #000000;
  font-size: 26rpx;
}

/* 店铺数据统计 */
.stats-section {
  background-color: #FFFFFF;
  margin: 0 20rpx 20rpx 20rpx; /* 移除顶部间距，保持与余额区域相连 */
  border-radius: 0 0 12rpx 12rpx; /* 只保留下边的圆角 */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.stats-row {
  display: flex;
  width: 100%;
}

.stats-row:first-child {
  border-bottom: 1rpx solid #F0F0F0;
}

.stat-item {
  width: 50%;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.stat-item:first-child {
  border-right: 1rpx solid #F0F0F0;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
}

.stat-value.red {
  color: #FF3B30;
}

.stat-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  background-size: contain;
}

.stat-icon.up {
  background-color: #E0F7FF;
  border-radius: 50%;
}

.stat-icon.down {
  background-color: #FFE0E0;
  border-radius: 50%;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 30rpx;
}

.menu-group {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  margin: 20rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  margin-right: 20rpx;
}

.icon-placeholder {
  width: 40rpx;
  height: 40rpx;
  background-color: #EEEEEE;
  border-radius: 8rpx;
}

.menu-name {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.menu-arrow {
  padding: 10rpx;
}

.arrow-placeholder {
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #CCCCCC;
  border-right: 3rpx solid #CCCCCC;
  transform: rotate(45deg);
}

/* 退出登录按钮 */
.logout-button {
  margin: 40rpx 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #FFFFFF;
  color: #FF6600;
  font-size: 32rpx;
  text-align: center;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 版本信息 */
.version-info {
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  margin-top: 20rpx;
} 