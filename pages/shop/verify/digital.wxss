/* pages/shop/verify/digital.wxss */
.container {
  min-height: 100vh;
  background-color: #FFFFFF;
  position: relative;
  padding-left: 0;
  padding-right: 0;
  padding-bottom: 0;
  box-sizing: border-box;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #FFFFFF;
  z-index: 1000;
  border-bottom: 1rpx solid #EEEEEE;
}

.nav-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 44px;
  padding: 0 15px;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-arrow {
  width: 20rpx;
  height: 20rpx;
  border-top: 3rpx solid #333333;
  border-left: 3rpx solid #333333;
  transform: rotate(-45deg);
}

.nav-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
  text-align: center;
  flex: 1;
}

.nav-right {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.more-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.more-dots {
  width: 6rpx;
  height: 6rpx;
  background-color: #333333;
  border-radius: 50%;
  position: relative;
}

.more-dots::before,
.more-dots::after {
  content: '';
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  background-color: #333333;
  border-radius: 50%;
}

.more-dots::before {
  top: -10rpx;
}

.more-dots::after {
  top: 10rpx;
}

/* 页面内容 */
.page-content {
  padding: 40rpx 30rpx;
}

/* 输入框区域 */
.input-area {
  margin-bottom: 40rpx;
}

.verify-input {
  width: 100%;
  height: 90rpx;
  background-color: #F5F5F5;
  border-radius: 45rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
}

.input-placeholder {
  color: #999999;
}

/* 按钮区域 */
.button-area {
  display: flex;
  flex-direction: column;
}

.submit-button {
  width: 100%;
  height: 90rpx;
  background-color: #FF6600;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  opacity: 0.5; /* 默认为不激活状态 */
}

.submit-button.active {
  opacity: 1; /* 激活状态 */
}

.cancel-button {
  width: 100%;
  height: 90rpx;
  background-color: #FFD8C0;
  color: #FF6600;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 覆盖微信按钮的默认样式 */
button {
  padding: 0;
  margin: 0;
  line-height: normal;
}

button::after {
  border: none;
} 