/* 页面容器 */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  position: relative;
  padding-left: 0;
  padding-right: 0;
  padding-bottom: 0;
  box-sizing: border-box;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: linear-gradient(to right, #FF6600, #FFAA00);
  color: #FFFFFF;
  z-index: 1000;
}

.nav-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 44px;
  padding: 0 15px;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 500;
  text-align: left;
}

.nav-buttons {
  display: flex;
  align-items: center;
}

.nav-button {
  width: 48rpx;
  height: 48rpx;
  margin-left: 20rpx;
}

/* 页面整体包装器 */
.page-wrapper {
  padding-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 功能区域 - 按照设计稿样式 */
.function-area {
  background: linear-gradient(to right, #FF6600, #FFAA00);
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 功能卡片区域 */
.function-cards {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.function-card {
  width: 48%;
  height: 180rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.function-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.function-name {
  font-size: 28rpx;
  color: #333333;
}

/* 商品管理区域 */
.goods-management {
  background-color: #FFFFFF;
  padding: 30rpx;
  margin-bottom: 20rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 12rpx;
}

.goods-management-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.goods-management-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #FFF8F3;
  padding: 20rpx;
  border-radius: 12rpx;
  position: relative;
}

.add-goods-area {
  flex: 1;
  display: flex;
  align-items: center;
}

.add-goods-icon-wrapper {
  margin-right: 20rpx;
}

.add-goods-icon-placeholder {
  width: 80rpx;
  height: 80rpx;
  background-color: #EEEEEE;
  border-radius: 40rpx;
}

.add-goods-info {
  display: flex;
  flex-direction: column;
}

.add-goods-text {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.add-goods-desc {
  font-size: 24rpx;
  color: #999999;
}

.add-goods-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: #FF6600;
  color: #FFFFFF;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(255, 102, 0, 0.2);
}

.add-goods-btn-icon-placeholder {
  width: 32rpx;
  height: 32rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 10rpx;
}

.add-goods-btn-text {
  font-size: 26rpx;
  color: #FFFFFF;
}

/* 最新发布商品 */
.latest-goods-header {
  background-color: #FFFFFF;
  padding: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 12rpx;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}

.latest-goods-content {
  padding: 0;
}

.latest-goods-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

/* 商品列表表头 */
.goods-list-header {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #EEEEEE;
  color: #999999;
  font-size: 26rpx;
}

.goods-header-item {
  text-align: center;
}

.goods-name-header {
  flex: 2;
  text-align: left;
}

.goods-stock-header, .goods-price-header {
  min-width: 80rpx;
  flex-shrink: 0;
}

.goods-price-header {
  min-width: 100rpx;
}

/* 商品列表 */
.goods-list {
  margin-top: 0;
  padding-top: 80px; /* 增加顶部内边距，确保第一个商品不被遮挡 */
}

.goods-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.goods-item:first-child {
  margin-top: 10rpx;
}

.goods-info {
  flex: 2;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.goods-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  flex-shrink: 0; /* 防止图片被压缩 */
  background-color: #EEEEEE; /* 默认灰色背景，作为占位符 */
}

.goods-detail {
  flex: 1; /* 改回弹性布局 */
  flex-shrink: 0; /* 防止被压缩 */
  overflow: hidden;
  margin-right: 20rpx; /* 与库存列保持距离 */
}

.goods-name {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%; /* 使用百分比而不是固定宽度 */
}

.goods-price-small {
  font-size: 24rpx;
  color: #999999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-stock {
  min-width: 80rpx; /* 最小宽度而不是固定宽度 */
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  flex-shrink: 0; /* 防止被压缩 */
}

.goods-price {
  min-width: 100rpx; /* 最小宽度而不是固定宽度 */
  text-align: center;
  font-size: 28rpx;
  color: #FF6600;
  font-weight: 500;
  flex-shrink: 0; /* 防止被压缩 */
}

/* 固定内容区域 */
.fixed-content {
  position: fixed;
  width: 100%;
  z-index: 10;
  background-color: #F5F5F5;
}

/* 商品滚动区域 */
.goods-scroll-view {
  position: fixed;
  width: calc(100% - 60rpx);
  margin-left: 30rpx;
  margin-right: 30rpx;
  background-color: #FFFFFF;
  border-radius: 0 0 12rpx 12rpx;
  box-sizing: border-box;
  padding: 0 0 30rpx 0; /* 移除顶部内边距 */
}

/* 添加一个占位元素样式 */
.list-placeholder {
  height: 60px; /* 使用固定的大值 */
  width: 100%;
} 