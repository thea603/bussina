/* pages/login/register.wxss */

/* 注册页面容器 */
.register-container {
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
  background-color: #ffffff;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 页面标题 */
.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

/* 输入组 */
.input-group {
  margin-top: 40rpx;
  position: relative;
}

/* 输入框 */
.input-field {
  width: 100%;
  height: 90rpx;
  border-bottom: 1px solid #e5e5e5;
  font-size: 32rpx;
  color: #333333;
  padding: 0 20rpx;
  box-sizing: border-box;
}

/* 验证码输入组 */
.verify-code-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 验证码输入框 */
.verify-code-input {
  flex: 1;
  margin-right: 20rpx;
}

/* 发送验证码按钮 */
.verify-code-btn {
  width: 200rpx;
  height: 70rpx;
  background-color: #ff6600;
  color: #ffffff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
}

/* 禁用状态的发送验证码按钮 */
.verify-code-btn.disabled {
  background-color: #cccccc;
  color: #ffffff;
}

/* 错误信息 */
.error-msg {
  position: absolute;
  left: 0;
  bottom: -40rpx;
  width: 100%;
}

/* 错误文本 */
.error-text {
  color: #ff0000;
  font-size: 24rpx;
}

/* 协议容器 */
.protocol-container {
  display: flex;
  align-items: center;
  margin-top: 80rpx;
}

/* 协议复选框 */
.protocol-checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 1px solid #cccccc;
  border-radius: 50%;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 选中状态的复选框 */
.protocol-checkbox.checked {
  border-color: #ff6600;
  background-color: #ff6600;
}

/* 复选框内部选中标记 */
.checkbox-inner {
  width: 20rpx;
  height: 20rpx;
  background-color: #ffffff;
  border-radius: 50%;
}

/* 协议文本 */
.protocol-text {
  font-size: 28rpx;
  color: #666666;
}

/* 确定按钮 */
.confirm-btn {
  width: 90%;
  height: 88rpx;
  background: linear-gradient(to right, #FF9500, #FF6000);
  color: #FFFFFF;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 60rpx auto 40rpx;
  border: none;
}

/* 禁用状态的确定按钮 */
.confirm-btn[disabled] {
  background: linear-gradient(to right, #FFBE7D, #FFAB7D);
  color: rgba(255, 255, 255, 0.8);
}

/* 底部提示 */
.bottom-tips {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

/* 提示文本 */
.tip-text {
  font-size: 28rpx;
  color: #666666;
}

/* 登录链接 */
.login-link {
  font-size: 28rpx;
  color: #ff6600;
  margin-left: 10rpx;
}