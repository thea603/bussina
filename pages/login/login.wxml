<!--pages/login/login.wxml-->
<!-- 登录页面容器 -->
<view class="login-container">
  <!-- 中间主体部分 -->
  <view class="main-content">
    <!-- Logo图片 -->
    <view class="logo-box"></view>
    <!-- 商铺名称 -->
    <view class="shop-name">裂变王</view>
    <!-- 商铺描述 -->
    <view class="shop-desc">—— 商家中心 ——</view>
  </view>
  
  <!-- 底部操作区域 -->
  <view class="bottom-area">
    <!-- 按钮容器 -->
    <view class="btn-container">
      <!-- 登录按钮 -->
      <view class="btn login-btn" bindtap="login">
        <text>登录</text>
      </view>
      <!-- 注册开店按钮 -->
      <view class="btn register-btn" bindtap="register">
        <text>注册开店</text>
      </view>
    </view>
    
    <!-- 底部提示文字 -->
    <view class="tips-container">
      <text class="tip-text">已有门店，直接登录</text>
      <text class="tip-text">新门店，注册开店</text>
    </view>
  </view>
</view>